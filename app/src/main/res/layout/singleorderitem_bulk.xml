<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:padding="3dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/txtStatus"
                    android:layout_marginRight="10dp"
                    android:text="Php 75.00"
                    android:textColor="@android:color/black"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginStart="115dp"
                    android:text="time"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/txtFoodStall"
                    android:layout_marginBottom="90dp"
                    android:text="Your order is being cooked"
                    android:textColor="@color/btn_login"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/txtFoodStall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Stall"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/txtFoodStall"
                    android:layout_marginTop="40dp"
                    android:text="Time Ordered:"
                    android:textColor="@color/colorPrimary"
                    />



                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtFoodStall"
                    android:text="Delivery Date:"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/textView3"/>

                <TextView
                    android:id="@+id/txtDeliveryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtTime"
                    android:layout_centerVertical="true"
                    android:text="date"
                    android:textColor="@android:color/black"
                    android:layout_alignTop="@+id/textView5"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txtFoodStall"
                    android:text="Venue:"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/textView5"/>

                <TextView
                    android:id="@+id/txtVenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_toEndOf="@+id/textView7"
                    android:maxWidth="190dp"
                    android:text="Place"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="TOTAL PRICE:"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold|italic"
                    android:layout_above="@+id/txtPrice"
                    android:layout_marginRight="10dp"
                    android:layout_alignTop="@+id/textView7"
                    />

                <TextView
                    android:id="@+id/txtOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="13dp"
                    android:text="   &#8942;"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnViewOrder"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:text="View Bulk Order"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
    <!-- Card view of orders by the customer; design of the single orders -->