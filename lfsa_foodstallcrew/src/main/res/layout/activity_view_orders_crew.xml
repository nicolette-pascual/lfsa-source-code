<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewOrdersActivity_Crew"
    android:background="@drawable/lfsa_icon_bg">

    <LinearLayout
        android:id="@+id/tabs_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pendingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="10dp"
            android:text="Pending Orders"
            android:textColor="@color/input_login"
            android:textSize="18sp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/acceptedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="10dp"
            android:text="Accepted Orders"
            android:textColor="@color/input_register_bg"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/historyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="10dp"
            android:text="Bulk Order "
            android:textColor="@color/input_register_bg"
            android:textSize="16sp"
            android:gravity="center"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
    <!-- Viewing of orders by the customer; shows the pending/unaccepted orders -->